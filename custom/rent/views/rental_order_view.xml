<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data>

        <record id="rental_order_tree_view" model="ir.ui.view">
            <field name="name">sale order template inherit form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="rental_start_date" string="Rental Start Date"/>
                    <field name="rental_end_date" string="Rental Ending Date"/>
                </xpath>

            </field>

        </record>

        <record id="rental_order_line_view" model="ir.ui.view">
            <field name="name">rental order line inherit form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">

                    <field name="rental_start_date" string="Rental Start Date"/>
                    <field name="rental_end_date" string="Rental End Date"/>
                    <button name="reset_dates" string="Reset Dates" type="object" class="btn-secondary"/>

                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="domain">[('can_be_rented', '=', True)]</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                       position="after">
                    <field name="rental_start_date" string="Start Date"/>
                    <field name="rental_end_date" string="Ending Date"/>
                    <field name="rental_price" string="Rental Price"/>

                </xpath>

            </field>

        </record>

        <record id="action_rental_order" model="ir.actions.act_window">
            <field name="name">Rental Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form,kanban</field>


        </record>

    </data>
</odoo>